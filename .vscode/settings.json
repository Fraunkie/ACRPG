{
    "json.maxItemsComputed": 30000,
    "Lua.runtime.version": "Lua 5.3",
    "Lua.workspace.preloadFileSize": 2000,
    "Lua.workspace.maxPreload": 1000,
    "Lua.hint.enable": true,
    "Lua.type.weakUnionCheck": true,
    "Lua.type.weakNilCheck": true,
    "Lua.diagnostics.disable": [
        "lowercase-global",
        "inject-field",
        "duplicate-set-field"
    ],
    "editor.parameterHints.enabled": true,
    "workbench.editor.enablePreview": false,
    "editor.semanticHighlighting.enabled": true,
    "Lua.diagnostics.globals": [
        "gg_unit_",
        "GetHeroStr",
        "GetHeroAgi",
        "GetHeroInt",
        "SetHeroStr",
        "SetHeroAgi",
        "SetHeroInt",
        "Player",
        "DisplayTextToPlayer",
        "label"
    ],
    "Lua.runtime.nonstandardSymbol": [
        "+",
        "-",
        "*",
        "/",
        "//",
        "%",
        "^",
        "#",
        "==",
        "~=",
        "<",
        "<=",
        ">",
        ">=",
        "="
    ],
    "editor.snippetSuggestions": "bottom",
    "editor.quickSuggestions": {
        "other": true,          // Enable suggestions for all code
        "comments": "inline",   // Enable suggestions within comments
        "strings": "inline"     // Enable suggestions within strings
    },
    "editor.suggestOnTriggerCharacters": true,  // Trigger suggestions on characters like ".", ":", etc.
    "editor.tabCompletion": "on",               // Accept suggestions with the Tab key
    "Lua.completion.enable": true,              // Enable Lua-specific completions
    "Lua.completion.callSnippet": "Both",       // Show function signatures and snippets
    "Lua.completion.displayContext": 4,         // Show full context in suggestions
    "github.copilot.nextEditSuggestions.enabled": true, // Disable Copilot's AI suggestions (if expired)
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "lua": false
    }, // Ensure Copilot is disabled entirely
    "chat.mcp.discovery.enabled": {
        "claude-desktop": true
    },
    "workbench.activityBar.location": "bottom",
    "continue.showInlineTip": false,
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "*.exe": "default"
    },
    "explorer.confirmDragAndDrop": false,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "colorHelper.pickerForm": "simple",
    "workbench.settings.applyToAllProfiles": [
        "colorHelper.pickerForm",
        "editor.suggest.snippetsQuickSuggestions",
        "editor.quickSuggestions"
    ],
    "terminal.integrated.suggest.quickSuggestions": {
        "commands": "on",
        "arguments": "on",
        "unknown": "off"
    },
    "colorHelper.resident": true,
    "terminal.integrated.suggest.enabled": true
}
